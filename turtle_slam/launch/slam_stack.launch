<launch>

<arg name="gazebo" default='false'/>

<!-- Turtlebot -->
<include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch" />

<!-- open gazebo with house enviroment -->
<!-- <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_house.launch"  if='$(arg gazebo)'/> -->
<include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch"  if='$(arg gazebo)'/>
<!-- use slam_toolbox SLAM -->
<include file="$(find slam_toolbox)/online_async.launch" />

<!-- Localization -->
<include file="$(find turtlebot3_navigation)/launch/move_base.launch" />

<!-- Rviz -->
<node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"/>

</launch>